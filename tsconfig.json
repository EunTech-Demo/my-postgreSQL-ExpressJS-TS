{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2016",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "allowJs": true,
    "paths": {
      "@/*": ["*"],
      "@root/*": ["../*"]
    }
  },
  "lib": ["es2016"],
  "include": ["./src/**/*", "./src/**/*.json", "*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
